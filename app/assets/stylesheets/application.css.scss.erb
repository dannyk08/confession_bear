@import "bootstrap-sprockets";
@import "bootstrap";

body{
	background-repeat: repeat-x repeat-y;
	padding-top: 150px;
	font-family: "Raleway";
	color: rgba(50,50,50,.75);
}
h1,h2,h3,h4,h5,h6{
	margin: 15px 0;
}
p{
	font-family: "Josefin Sans";
	font-size: 20px;
	margin: 2px 0;
}

#logo{
	max-width: 125px;
	background-color: rgba(200,200,200, 0.19);
	border-radius: 20px;
	box-shadow: 0 0 4em rgba(200,200,200, 0.455);
}

ul{
	list-style: none;
	padding: 0px;
}

// Navbar
.navbar.navbar-default.navbar-fixed-top{
	background-color: transparent;
	border-color: transparent;
	padding: 10px 30px 0 30px;
}
#bs-example-navbar-collapse-1 ul li a{
	text-align: right;

	&:hover{
		color: #4dcc68;
		text-shadow: 0 0 4em black;
	}
}

ul.nav.navbar-nav.navbar-right li a{
	font-size: 16px
}

.thumb-pic{
	height: 45px;
	width: 45px;
	-webkit-filter: grayscale(20%)
}


.form-group{
	margin: 10px;
}

.submit-actions{
	padding: 0 7px;
}

.swirly-pattern{
	background-image: url("http://subtlepatterns.com/patterns/swirl_pattern.png");
	margin-top: -160px;
	padding-top: 160px;
}

.underlined-text{
	border-bottom: 1px solid;
	padding-bottom: 10px;
}

.back-btn{
	max-width: 270px;
	margin: 0 auto;
}

// Footer

footer{
	position: relative;
	bottom: 0;
	// width: 100%;
	padding-top: 60px;
	// margin: 0 -15px;
	background-color: rgba(39,39,39, .95);
	.container{
		padding: 15px 0;
	}
}
