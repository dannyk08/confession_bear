.row	
	.col-md-5.col-md-offset-4
		%h1 Confession Comments
		%section
			%div.confession-row
				%h3= @confession.title
				%p= @confession.story
				%strong Confessed: #{@confession.date_confessed}
				%div
				= link_to "Edit", edit_confession_path
				= link_to "Delete", @confession, method: :delete, data: {confirm: "Are you sure?"}
			%div
				%button= link_to 'Back', profile_path
			.row
				%div
					= form_for([@confession, @comment]) do |f|
						%h3= f.label "Have something to say?"
						= f.text_area :reply, size: "50x5"
						= f.submit
				= render 'comments/comment'