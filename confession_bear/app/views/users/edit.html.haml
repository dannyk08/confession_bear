%h1 Edit Profile
%h3= current_user.username
#user-form
	= image_tag current_user.image.url(:thumb) if current_user.image.url.present?
	%h4 Upload Image
	= form_for(current_user, :html => {:multipart => true}) do |f|
		= f.file_field :image
		= f.submit "Update"
%div 
	%div= render 'form'
%h4= link_to "Delete Account", current_user, method: :delete, alert: "Are you sure you want to delete your account?"

= link_to "Back", user_path