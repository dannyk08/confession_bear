!!!
%html
	%head
		%title ConfessionBear
		= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true
		= javascript_include_tag 'application', 'data-turbolinks-track' => true
		= csrf_meta_tags
	%body
		#container
			#user_header
				-if logged_in?
					%p= current_user.username
					%p= link_to "Profile", profile_path
					%p= link_to "Edit Profile", edit_profile_path(current_user.id)
					%p= link_to "Log out", logout_path, method: :delete
				-else
					%p= link_to "Log In", login_path
					%p= link_to "Register", signup_path
	= yield