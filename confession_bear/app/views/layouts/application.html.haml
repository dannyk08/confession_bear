!!!
%html
	%head
		%title Confession Bear
		= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true
		= javascript_include_tag 'application', 'data-turbolinks-track' => true
		= csrf_meta_tags
		%meta{:content => "width=device-width, initial-scale=1", :name => "viewport"}/
		=favicon_link_tag 'favicon.ico'
	%body
		%header
			%nav.navbar.navabar-default
				.container-fluid
					.navbar-header
						%img.col-md-2#logo{ :alt => "confession bear logo", :src => "https://s3-us-west-1.amazonaws.com/confession-bear/the_bear_images/Confession+Bear.png"}/
						%a.col-md-4.col-md-offset-4#navbar-letters
							-if logged_in?
								%strong= current_user.username
								= link_to "Profile", 			profile_path
								= link_to "Confessions",  confessions_path
								= link_to "Edit Profile", edit_profile_path(current_user.id)
								= link_to "Log out", 			logout_path, method: :delete
							-else
								%p
								= link_to "Home", 		root_url
								= link_to "Log In",		login_path
								= link_to "Register", signup_path
	= yield