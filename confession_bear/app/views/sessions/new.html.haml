.row
	.col-md-4.col-md-offset-4
		%div.confession-row#login
			%h3.center-text Login
			%div
				= form_for :login do |l|
					%div
						.glyphicon.glyphicon-envelope
							= l.text_field :email, :placeholder => "confession@bear.com"
						.glyphicon.glyphicon-lock
							= l.password_field :password, :placeholder => "confessions" 
						%div= submit_tag"Log In", :id => "log-in"
				.glyphicon.glyphicon-bullhorn
					= link_to " Need Account?", signup_path, :id => "sign-up"
